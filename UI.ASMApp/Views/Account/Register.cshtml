<!--Section: Contact v.2-->
<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-50">
            <form class="login100-form validate-form" enctype="multipart/form-data" method="post" action="/Account/Register">
                <div asp-validation-summary="All" class="text-danger"></div>
                <a asp-controller="account" asp-action="login" class="txt2 hov1">Back</a>

                <span class="login100-form-title p-b-33">
                    Register
                </span>
                <div class="wrap-input100 validate-input">
                    <input class="input100" asp-for="Name" type="text" name="Name" placeholder="Name">
                    <span asp-validation-for="Name" class="focus-input100-1"></span>
                    <span asp-validation-for="Name" class="focus-input100-2"></span>
                </div>

                <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
                    <input class="input100" asp-for="Email" type="text" name="email" placeholder="Email">
                    <span asp-validation-for="Email" class="focus-input100-1"></span>
                    <span asp-validation-for="Email" class="focus-input100-2"></span>
                </div>


                <div class="wrap-input100 rs1 validate-input">
                    <input class="input100" asp-for="PhoneNumber" name="pass" placeholder="PhoneNumber">
                    <span asp-validation-for="PhoneNumber" class="focus-input100-1"></span>
                    <span asp-validation-for="PhoneNumber" class="focus-input100-2"></span>
                </div>

                <div class="wrap-input100 rs1 validate-input">
                    <input class="input100" asp-for="DateOfBirth" name="dateofbirth" placeholder="DateOfBirth">
                    <span asp-validation-for="DateOfBirth" class="focus-input100-1"></span>
                    <span asp-validation-for="DateOfBirth" class="focus-input100-2"></span>
                </div>

                <div class="wrap-input100 rs1 validate-input">
                    <input class="input100" asp-for="Password" type="password" name="password" placeholder="Password">
                    <span asp-validation-for="Password" class="focus-input100-1"></span>
                    <span asp-validation-for="Password" class="focus-input100-2"></span>
                </div>

                <div class="wrap-input100 rs1 validate-input">
                    <input class="input100" asp-for="ConfirmPassword" type="password" name="confirmpassword" placeholder="ConfirmPassword">
                    <span asp-validation-for="ConfirmPassword" class="focus-input100-1"></span>
                    <span asp-validation-for="ConfirmPassword" class="focus-input100-2"></span>
                </div>

                <div class="container-login100-form-btn m-t-20">
                    <button class="login100-form-btn" type="submit">
                        Creata account
                    </button>
                </div>


            </form>
        </div>
    </div>
</div>



