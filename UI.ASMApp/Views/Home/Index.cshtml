    </div>
    <a asp-controller="home" asp-action="details" asp-route-id="@e.Id">
        <img class="text-center center logo_top"
             style=" height: 200px; width: 200px; object-fit:cover; margin-bottom: 20px; margin-top: 20px;" src="@photoPath" asp-append-version="true" />
    </a>
    <div class="card-footer text-center">
        <dl class="row">
            <dt class="col-sm-6">Name</dt>
            <dd class="col-sm-6">@e.Name</dd>

            <dt class="col-sm-6">Age</dt>
            <dd class="col-sm-6">@e.Age</dd>
            <dt class="col-sm-6">Type of Animal</dt>
            <dd class="col-sm-6">@e.AnimalType</dd>
        </dl>
