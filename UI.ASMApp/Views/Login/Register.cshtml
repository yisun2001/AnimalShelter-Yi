@model Client

@*make a createaccountviewmodel*@

<form enctype="multipart/form-data" asp-controller="login" asp-action="register" method="post" class="mt-3">
    <!--Section: Contact v.2-->

    <section class="mb-4">

        <!--Section heading--> <div class="col-sm-2">
            <a asp-controller="login" asp-action="index" class="btn btn-primary">Back</a>
        </div>
        <h2 class="h1-responsive font-weight-bold text-center my-4">Register </h2>
        <!--Section description-->


        <p class="text-center w-responsive mx-auto mb-5">
            Fill in the forms to register your account.
        </p>
    </section>


    <div class="row">

        <div class="col-md-6">
            <div class="md-form mb-0">
                <label asp-for="UserName " class=" col-form-label"></label>
                <input asp-for="UserName " class="form-control" placeholder="Username ">
                <span asp-validation-for="UserName " class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="md-form mb-0">
                <label asp-for="Password " class=" col-form-label"></label>
                <input asp-for="Password " class="form-control" placeholder="Password ">
                <span asp-validation-for="Password " class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">

        <div class="col-md-6">
            <div class="md-form mb-0">
                <label asp-for="Adress " class=" col-form-label"></label>
                <input asp-for="Adress " class="form-control" placeholder="Adress ">
                <span asp-validation-for="Adress " class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="md-form mb-0">
                <label asp-for="PhoneNumber " class=" col-form-label"></label>
                <input asp-for="PhoneNumber " class="form-control" placeholder="Phone Number ">
                <span asp-validation-for="PhoneNumber " class="text-danger"></span>
            </div>
        </div>
    </div>




    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">

        <div class="col-sm-2">
            <button type="submit" class="btn btn-primary">Register</button>
        </div>
    </div>

</form>

