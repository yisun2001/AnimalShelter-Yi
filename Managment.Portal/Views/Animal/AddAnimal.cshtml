@{
    ViewData["Title"] = "Add a animal";
}
<h1>@ViewData["Title"]</h1>

@model AddAnimalViewModel

<div>

    <div asp-validation-summary="All"></div>

    <div>
        <form enctype="multipart/form-data" asp-action="AddAnimal" method="post">

            <div class="row">
                <div class="form-group col-6">
                    <label asp-for="Name">Name:</label>
                    <input class="form-control" asp-for="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group col-6">
                    <label asp-for="Image">Image:</label>
                    <div class="custom-file">
                        <input asp-for="Image" class="form-control custom-file-input" />
                        <label class="custom-file-label">Choose file</label>
                    </div>
                </div>
            </div>


            <div class="form-group">
                <label asp-for="Description">Description:</label>
                <textarea class="form-control" asp-for="Description"></textarea>
            </div>
            <div class="row">
                <div class="form-group col-6">
                    <label asp-for="DateOfBirth">Date Of Birth:</label>
                    <input type="date" class="form-control" asp-for="DateOfBirth" />
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>

                <div class="form-group col-6">
                    <label asp-for="EstimatedAge">Estimated Age:</label>
                    <input class="form-control" asp-for="EstimatedAge" />
                </div>
            </div>

            <div class="row">
                <div class="form-group col-4">
                    <label asp-for="Type">AnimalType:</label>
                    <select class="form-control" asp-for="Type" asp-items="@ViewBag.Types"></select>
                </div>

                <div class="form-group col-4">
                    <label asp-for="Race">Race:</label>
                    <input class="form-control" asp-for="Race" />
                </div>

                <div class="form-group col-4">
                    <label asp-for="Gender">Gender:</label>
                    <select class="form-control" asp-for="Gender" asp-items="@ViewBag.Genders"></select>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="DateOfArrival">Date Of Arrival:</label>
                <input type="date" class="form-control" asp-for="DateOfArrival" />
                <span asp-validation-for="DateOfArrival" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="form-group col-4">
                    <label asp-for="Sterilised">Sterilised:</label>
                    <input class="form-control" asp-for="Sterilised" />
                </div>

                <div class="form-group col-4">
                    <label asp-for="Adoptable">Adoptable:</label>
                    <input class="form-control" asp-for="Adoptable" />
                </div>

                <div class="form-group col-4">
                    <label asp-for="KidFriendly">Kid friendly:</label>
                    <select class="form-control" asp-for="KidFriendly" asp-items="@ViewBag.KidFriendly"></select>
                </div>
            </div>


            <div class="form-group">
                <label asp-for="ReasonAdoptable">Reason Adoptable:</label>
                <input class="form-control" asp-for="ReasonAdoptable" />
            </div>

            <div class="form-group">
                <label asp-for="ResidenceId">Residence:</label>
                <select class="form-control" asp-for="ResidenceId" asp-items="@ViewBag.Residences"></select>
            </div>

            <div class="form-group ">
                <button class="btn btn-primary col-sm-4 text-center">Add Animal</button>
            </div>

            @section Scripts {
                <script>
                    $(document).ready(function () {
                        $('.custom-file-input').on("change",
                            function () {
                                var fileName = $(this).val().split("\\").pop();
                                $(this).next('.custom-file-label').html(fileName);
                            });
                    });
                </script>
            }
        </form>
    </div>

</div>
