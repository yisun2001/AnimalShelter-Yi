@{
    ViewData["Title"] = "Add a Note";
}
<h1>@ViewData["Title"]</h1>

@model AddNoteViewModel

<div>

    <div asp-validation-summary="All"></div>

    <div>
        <form asp-action="AddNote" method="post">

            <div class="form-group">
                <label asp-for="Comment">Description:</label>
                <textarea type="text" class="form-control" asp-for="Comment" > </textarea>
            </div>
            <div class="form-group ">
                <button class="btn btn-primary col-sm-4 text-center">Add Note</button>
            </div>
        </form>
    </div>
</div>