@model Treatment

<form enctype="multipart/form-data" asp-controller="treatment" asp-action="Add" method="post" class="mt-3">
    <!--Section: Contact v.2-->

    <section class="mb-4">

        <!--Section heading--> <div class="col-sm-2">
            <a asp-controller="home" asp-action="index" class="btn btn-primary">Back</a>
        </div>
        <h2 class="h1-responsive font-weight-bold text-center my-4">Add an Animal</h2>
        <!--Section description-->


        <p class="text-center w-responsive mx-auto mb-5">
            Fill in the forms to add a treatment to Animal @Model.Animal
        </p>
    </section>


    <div class="row">

        <div class="col-md-6">
            <div class="md-form mb-0">
                <label asp-for="TypeOfTreatment" class=" col-form-label"></label>
                <input asp-for="TypeOfTreatment" class="form-control" required placeholder="Type Of Treatment">
                <span asp-validation-for="TypeOfTreatment " class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="md-form mb-0">
                <label asp-for="Description" class=" col-form-label"></label>
                <textarea asp-for="Description" class="form-control" required placeholder="Description"> </textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">

        <div class="col-md-6">
            <div class="md-form mb-0">
                <label asp-for="Costs" class=" col-form-label"></label>
                <input asp-for="Costs" class="form-control" required placeholder="Costs">
                <span asp-validation-for="Costs" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="md-form mb-0">
                <label asp-for="AgeRequirement" class=" col-form-label"></label>
                <input asp-for="AgeRequirement" class="form-control" required placeholder="Required Age for Treatment">
                <span asp-validation-for="AgeRequirement" class="text-danger"></span>
            </div>
        </div>
    </div>


    <div class="row">

        <div class="col-md-12">
            <div class="md-form mb-0">
                <label asp-for="DateOfTime" class=" col-form-label"></label>
                <input asp-for="DateOfTime" class="form-control" required placeholder="DateOfTime"> 
                <span asp-validation-for="DateOfTime" class="text-danger"></span>
            </div>
        </div>
    </div>


    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">

        <div class="col-sm-2">
            <button type="submit" class="btn btn-primary">Add Treatment to @Model.Animal</button>
        </div>
    </div>
    
</form>

