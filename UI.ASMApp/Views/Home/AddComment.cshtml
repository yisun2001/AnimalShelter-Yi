@model AddCommentViewModel

<a asp-action="index" asp-controller="home" asp-route-id="@Model.CommentId" class="btn btn-primary">Back</a>
<form enctype="multipart/form-data" asp-controller="home" asp-action="addComment" method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="VolunteerId" hidden="hidden" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="VolunteerId" type="hidden" class="form-control" placeholder="VolunteerId">
            <span asp-validation-for="VolunteerId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="AnimalId" hidden="hidden" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="AnimalId" type="hidden" class="form-control" placeholder="AnimalId">
            <span asp-validation-for="AnimalId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="comment.CommentText" class="col-sm-2 col-form-label">Comment</label>
        <div class="col-sm-10">
            <textarea asp-for="comment.CommentText" class="form-control" placeholder="Write your comment here"></textarea>
            <span asp-validation-for="comment.CommentText" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </div>

</form>