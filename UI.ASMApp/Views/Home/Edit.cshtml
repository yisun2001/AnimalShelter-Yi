@model Animal
@inject Core.DomainServices.IResidenceRepository residenceRepository;
@inject Core.DomainServices.IVolunteerRepository volunteerRepository;
@inject Core.DomainServices.IClientRepository clientRepository;

<form enctype="multipart/form-data" asp-controller="home" asp-action="edit" method="post" class="mt-3">

    <div class="form-group row">
        <div class="col-sm-10">
            <a asp-controller="home" asp-action="details" asp-route-id="@Model.Id"><h3>Back</h3></a>
        </div>
    </div>

    <a asp-controller="home" asp-action="details" asp-route-id="@Model.Id"><h3>@Model.Name</h3></a>
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="DateOfBirth" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="DateOfBirth" class="form-control" placeholder="DateOfBirth">
            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="EstimatedAge" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="EstimatedAge" class="form-control" placeholder="EstimatedAge">
            <span asp-validation-for="EstimatedAge" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Description" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Description" class="form-control" placeholder="Description">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="AnimalType" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="AnimalType" class="form-control" placeholder="AnimalType">
            <span asp-validation-for="AnimalType" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Breed" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Breed" class="form-control" placeholder="Breed">
            <span asp-validation-for="Breed" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Gender" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Gender" class="form-control" placeholder="Gender">
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="ImagePath" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="ImagePath" class="form-control" placeholder="Photo">
            <span asp-validation-for="ImagePath" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="DateOfArrival" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="DateOfArrival" class="form-control" placeholder="DateOfArrival">
            <span asp-validation-for="DateOfArrival" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="DateOfAdoption" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="DateOfAdoption" class="form-control" placeholder="DateOfAdoption">
            <span asp-validation-for="DateOfAdoption" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="DateOfDeath" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="DateOfDeath" class="form-control" placeholder="DateOfDeath">
            <span asp-validation-for="DateOfDeath" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="IsNeutered" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="IsNeutered" class="form-control" placeholder="IsNeutered">
            <span asp-validation-for="IsNeutered" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="CompatibleWithKids" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="CompatibleWithKids" class="form-control" placeholder="CompatibleWithKids">
            <span asp-validation-for="CompatibleWithKids" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="ReasonOfDistancing" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="ReasonOfDistancing" class="form-control" placeholder="ReasonOfDistancing">
            <span asp-validation-for="ReasonOfDistancing" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Adoptable" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Adoptable" class="form-control" placeholder="Adoptable">
            <span asp-validation-for="Adoptable" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="ClientNumber" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="ClientNumber" name="ClientNumber" id="ClientNumber">
                @foreach (var client in clientRepository.GetAllClients())
                {
    <option value=@client.ClientNumber>@client.ClientNumber .@client.Name</option>
}
                <option value=@null>No Client</option>
            </select>
            <span asp-validation-for="ClientNumber" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="VolunteerId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="VolunteerId" name="VolunteerId" id="VolunteerId">
                @foreach (var vol in volunteerRepository.GetAllVolunteers())
                {
    <option value=@vol.VolunteerId>@vol.VolunteerId .@vol.Name</option>
}
                <option value=@null>No Volunteer</option>
            </select>
            <span asp-validation-for="VolunteerId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="ResidenceId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="ResidenceId" name="ResidenceId" id="ResidenceId">
                @foreach (var res in residenceRepository.GetAllResidences())
                {
    <option value=@res.Id>@res.Id .@res.Shelter</option>
}
                <option value=@null>No residence</option>
            </select>
            <span asp-validation-for="ResidenceId" class="text-danger"></span>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Edit</button>
        </div>
    </div>

</form>