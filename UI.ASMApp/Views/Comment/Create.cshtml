@model Comment

<form enctype="multipart/form-data" asp-controller="comment" asp-action="Create" method="post" class="mt-3">
    <!--Section: Contact v.2-->

    <section class="mb-4">

        <!--Section heading--> <div class="col-sm-2">
            <a asp-controller="home" asp-action="index" class="btn btn-primary">Back</a>
        </div>
        <h2 class="h1-responsive font-weight-bold text-center my-4">Add a Comment</h2>
        <!--Section description-->


        <p class="text-center w-responsive mx-auto mb-5">
            Fill in the forms to add a comment to Animal @Model?.Animal
        </p>
    </section>


    <div class="row">

        <div class="col-md-6">
            <div class="md-form mb-0">
                <label asp-for="CommentMadeBy  " class=" col-form-label"></label>
                <input asp-for="CommentMadeBy  " class="form-control" required placeholder="Comment Made By">
                <span asp-validation-for="CommentMadeBy   " class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="md-form mb-0">
                <label asp-for="DateTime " class=" col-form-label"></label>
                <input asp-for="DateTime " class="form-control" required placeholder="DateTime "> 
                <span asp-validation-for="DateTime " class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">

        <div class="col-md-6">
            <div class="md-form mb-0">
                <label asp-for="CommentText " class=" col-form-label"></label>
                <textarea asp-for="CommentText " class="form-control" required placeholder="Write your comment here..."> </textarea>
                <span asp-validation-for="CommentText " class="text-danger"></span>
            </div>
        </div>

    </div>
    </div>




    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">

        <div class="col-sm-2">
            <button type="submit" class="btn btn-primary">Add Comment to @Model?.Animal</button>
        </div>
    </div>

</form>

