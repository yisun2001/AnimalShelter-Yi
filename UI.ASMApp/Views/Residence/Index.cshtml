@model IEnumerable<Core.Domain.Residence>

@{ ViewData["Title"] = "Residence";
}
<a class="btn btn-primary" asp-action="Create">Create Residence</a>

<div class="card-deck">

    @foreach (var e in @Model)
    {
<div class="card m-3" style="min-width: 18rem; max-width:70%">
    <div class="card-header">
        <h3 class="text-center">@e.Shelter</h3>
    </div>
    <div class="card-footer text-center">
        <a asp-controller="residence" asp-action="details" asp-route-id="@e.Id" class="btn btn-primary m-1">View</a>
        <a asp-controller="residence" asp-action="edit" asp-route-id="@e.Id" class="btn btn-primary m-1">Edit</a>

        <form asp-action="Delete" asp-route-id="@e.Id" method="post">
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>

    </div>
</div>}
</div>